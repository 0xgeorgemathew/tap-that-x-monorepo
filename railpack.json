{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "cache": [
        "node_modules",
        ".yarn/cache"
      ],
      "commands": [
        "corepack enable",
        "corepack prepare yarn@3.2.3 --activate",
        "yarn install --immutable"
      ]
    },
    "build": {
      "inputs": [
        {
          "step": "install"
        }
      ],
      "cache": [
        "packages/nextjs/.next/cache"
      ],
      "env": {
        "NODE_ENV": "production",
        "NEXT_TELEMETRY_DISABLED": "1",
        "SKIP_ENV_VALIDATION": "true"
      },
      "commands": [
        "yarn workspace @se-2/nextjs build"
      ]
    }
  },
  "deploy": {
    "startCommand": "node packages/nextjs/.next/standalone/packages/nextjs/server.js"
  }
}